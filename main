import pyxel

class Oyun:
    def __init__(self):
        pyxel.init(160, 120)  # caption kaldırıldı
        self.x = 0
        pyxel.run(self.guncelle, self.ciz)

    def guncelle(self):
        if pyxel.btn(pyxel.KEY_RIGHT):
            self.x += 1
        if pyxel.btn(pyxel.KEY_LEFT):
            self.x -= 1

    def ciz(self):
        pyxel.cls(0)
        pyxel.rect(self.x, 50, 8, 8, 9)

Oyun()
